<div class="container bg-white">
<h1> <%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed == true %>
  <p>This task is completed.</p>
<% else %>
  <p>This task is not completed.</p>
<% end %>

<%= link_to "Edit this task", edit_task_path, :class => "btn btn-light" %>
<%= link_to "Back to tasks", tasks_path, :class => "btn btn-light" %>
</div>